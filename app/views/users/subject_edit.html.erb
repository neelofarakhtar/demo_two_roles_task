<h1>Add Subjects</h1>
<%= form_with model: Subject.new do |form| %>
<p><%= form.hidden_field :user_id, value: @user.id %></p>

  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to "Back", root_path %>

