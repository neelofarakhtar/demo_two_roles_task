<h2>Add new user</h2>
<%= form_with model: @user do |form| %>
  <div>
    <%= form.label :email %><br>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :password %><br>
    <%= form.password_field :password, autocomplete: "new-password" %>
  </div>

   <div class="field">
    <%= form.label :select_role %><br />
   
    <%= form.select :role, options_for_select(Role.where.not(name: "admin").map{|role|[role.name,role.id]}) %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>